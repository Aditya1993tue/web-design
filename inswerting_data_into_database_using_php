</head>
<body>
<form action="insert.php" method="post">
    <p>
        <label for="emloyee_id">emloyee_id:</label>
        <input type="text" name="emloyee_id" id="emloyee_id">
    </p>
    <p>
        <label for="employee_name">employee_name:</label>
        <input type="text" name="employee_name" id="employee_name">
    </p>
    
    <input type="submit" value="Submit">
</form>
</body>
</html>

# php code for connecting database using php#

<html>
	<body>
		<?php
			$server="localhost";
			$user="root";
			$pass="";
			$db="aditya_table";
			$conn=mysqli_connect($server,$user,$pass,$db);
			if(!$conn)
			{
				die("Connection Failed".mysqli_connect_error());
			}
			$employee_id=$_POST['txt1'];
			$employee_name=$_POST['txt2'];
			$sql="Insert into employee(employee_id,employee_name) values('$employee_id','$employee_name')";
			if(mysqli_query($conn,$sql))
			{
				echo "Record Added Successfully....!";
			}
			else
			{
				echo "error";
			}
				mysqli_close($conn);
		?>
	</body>
</html>
